{
  "name": "classy-schedule-desktop",
  "productName": "ClassySchedule",
  "version": "1.0.1",
  "main": "public/electron.js",
  "private": true,
  "author": "CISC480 Desktop Team",
  "description": "A lightweight desktop application for creating classy schedules.",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/material": "^5.5.0",
    "@mui/styled-engine": "^5.4.4",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.26.1",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-prompt": "^1.7.0",
    "material-ui-popup-state": "^2.0.0",
    "mysql": "^2.18.1",
    "prop-type": "0.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.2",
    "react-scripts": "^5.0.0",
    "tree-model": "^1.0.7",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "electron-pack": "electron-builder -mw -c.extraMetadata.main=build/electron.js",
    "electron-dev": "concurrently \"cross-env BROWSER=none && npm start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^17.1.0",
    "electron-builder": "^23.0.3",
    "electron-packager": "^15.4.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.classy-schedule",
    "mac": {
      "icon": "src/assets/icons/mac/logo-desktop.icns",
      "extraResources": [
        "public/services/testPythonScript/mac/**/*"
      ]
    },
    "win": {
      "target": "zip",
      "icon": "src/assets/icons/win/logo-desktop.ico",
      "extraResources": [
        "public/services/testPythonScript/windows/**/*"
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "src/assets/icons/png"
    }
  }
}
